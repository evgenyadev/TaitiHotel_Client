<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/colorTransparentLightGray"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/round_button_info"
        android:src="@android:drawable/ic_dialog_info" />


    <TextView
        android:id="@+id/room_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/infoButton"
        android:layout_toRightOf="@+id/infoButton"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:textStyle="bold"
        tools:text="Тип номера" />

    <TextView
        android:id="@+id/room_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:layout_alignBottom="@+id/infoButton"
        android:layout_toRightOf="@+id/infoButton"
        android:paddingLeft="15dp"
        android:textStyle="italic"
        tools:text="свободных номеров: ?" />


    <ImageButton
        android:id="@+id/orderButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_buy"
        android:background="@drawable/round_corners_button_green" />

</RelativeLayout>